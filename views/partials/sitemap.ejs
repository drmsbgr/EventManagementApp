<div class="row justify-content-center pt-4 mt-5 border-top">
  <h4 class="fw-bold mb-4 text-center text-dark">Sayfalara Hızlı Ulaşım</h4>

  <div class="col-lg-12">
    <div class="row g-4">
      <div class="col-md-4">
        <div class="card shadow-sm h-100 border-info">
          <div class="card-header bg-info text-white fw-bold">
            <i class="fas fa-bullhorn me-2"></i> İçerik ve Keşfet
          </div>
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <a href="/" class="text-dark"
                  ><i class="fas fa-home me-2"></i> Ana Sayfa</a
                >
              </li>
              <li class="list-group-item">
                <a href="/events" class="text-dark"
                  ><i class="fas fa-calendar-alt me-2"></i> Tüm Etkinlikler</a
                >
              </li>
              <li class="list-group-item">
                <a href="/faq" class="text-dark"
                  ><i class="fas fa-question-circle me-2"></i> Soru ve Cevaplar
                  (SSS)</a
                >
              </li>
              <!-- <li class="list-group-item">
                <a href="/sitemap.xml" target="_blank" class="text-muted"
                  ><i class="fas fa-file-code me-2"></i> XML Site Haritası</a
                >
              </li> -->
            </ul>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card shadow-sm h-100 border-success">
          <div class="card-header bg-success text-white fw-bold">
            <i class="fas fa-user me-2"></i> Kullanıcı ve Hesap
          </div>
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <% if (isAuthenticated) { %>
              <li class="list-group-item">
                <a href="/user/profile" class="text-dark"
                  ><i class="fas fa-id-badge me-2"></i> Profil Bilgilerim</a
                >
              </li>
              <li class="list-group-item">
                <a href="/user/registrations" class="text-dark"
                  ><i class="fas fa-bookmark me-2"></i> Kayıt Olduğum
                  Etkinlikler</a
                >
              </li>
              <li class="list-group-item">
                <form action="/auth/logout" method="POST" class="m-0 d-inline">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                  <button type="submit" class="btn btn-link text-danger p-0">
                    <i class="fas fa-sign-out-alt me-2"></i> Çıkış Yap
                  </button>
                </form>
              </li>
              <%} else { %>
              <li class="list-group-item">
                <a href="/auth/login" class="text-dark"
                  ><i class="fas fa-sign-in-alt me-2"></i> Giriş Yap</a
                >
              </li>
              <li class="list-group-item">
                <a href="/auth/register" class="text-dark"
                  ><i class="fas fa-user-plus me-2"></i> Kayıt Ol</a
                >
              </li>
              <%}%>
            </ul>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card shadow-sm h-100 border-warning">
          <div class="card-header bg-warning text-dark fw-bold">
            <i class="fas fa-tools me-2"></i> Yönetim ve Teknik
          </div>
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <a href="/admin" class="text-dark"
                  ><i class="fas fa-chart-line me-2"></i> Admin Paneli (Yetkili
                  Girişi)</a
                >
              </li>
              <li class="list-group-item">
                <a href="/admin/events" class="text-dark"
                  ><i class="fas fa-edit me-2"></i> Etkinlik Yönetimi</a
                >
              </li>
              <li class="list-group-item">
                <a href="/admin/users" class="text-dark"
                  ><i class="fas fa-users-cog me-2"></i> Kullanıcılar</a
                >
              </li>
              <li class="list-group-item">
                <a href="/admin/stats" class="text-dark"
                  ><i class="fas fa-chart-column me-2"></i> İstatistikler</a
                >
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
