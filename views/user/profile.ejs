<div class="row justify-content-center mt-5">
  <div class="col-md-7 col-lg-5">
    <div class="card shadow-lg border-0 rounded-lg">
      <div class="card-header bg-dark text-white text-center">
        <h3 class="fw-light my-3">Kullanıcı Profil Bilgileri</h3>
      </div>

      <div class="card-body text-center">
        <i class="fas fa-user-circle fa-5x text-primary mb-3"></i>

        <h4 class="card-title fw-bold mb-4 text-dark"><%= user.username %></h4>

        <ul class="list-group list-group-flush text-start">
          <li
            class="list-group-item d-flex justify-content-between align-items-center"
          >
            <span class="fw-bold"
              ><i class="fas fa-envelope me-2 text-info"></i> E-posta
              Adresi:</span
            >
            <span><%= user.email %></span>
          </li>

          <li
            class="list-group-item d-flex justify-content-between align-items-center"
          >
            <span class="fw-bold"
              ><i
                class="fas fa-id-badge me-2 <%= user.role === 'admin' ? 'text-danger' : 'text-success' %>"
              ></i>
              Rol:</span
            >
            <span
              class="badge bg-<%= user.role === 'admin' ? 'danger' : 'success' %> fs-6"
            >
              <%= user.role.toUpperCase() %>
            </span>
          </li>
        </ul>
      </div>

      <div class="card-footer text-center py-3">
        <a href="/" class="btn btn-outline-secondary">
          <i class="fas fa-arrow-left me-1"></i> Anasayfaya Dön
        </a>
      </div>
    </div>
  </div>
</div>
